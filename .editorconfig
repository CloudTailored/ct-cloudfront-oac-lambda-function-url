# http://editorconfig.org
root = true

# All Files
[*]
charset = utf-8
indent_style = tab
indent_size = tab
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

##########################################
# File Extension Settings
##########################################

# Markdown Files
[*.{md,mdx}]
trim_trailing_whitespace = false

# JSON Files
[*.{json,json5,webmanifest}]
indent_style = space
indent_size = 2

# YAML Files
[*.{yml,yaml}]
indent_style = space
indent_size = 2
